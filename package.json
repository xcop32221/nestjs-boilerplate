{
  "name": "nest-server-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build --webpackPath webpack.config.js",
    "format": "biome format --write",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest build --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "cross-env NODE_ENV=dev nest build --webpackPath webpack-hmr.config.js --debug --watch",
    "start:prod": "node dist/main",
    "lint": "biome lint --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true --fix --unsafe"]
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.0.8",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.8",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.8",
    "@typegoose/typegoose": "^12.10.1",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "express-request-id": "^3.0.0",
    "internal-ip": "^8.0.0",
    "ioredis": "^5.4.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.10.0",
    "mongoose-aggregate-paginate-v2": "^1.1.3",
    "mongoose-paginate-v2": "^1.9.0",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "node-schedule": "^2.1.1",
    "passport-jwt": "^4.0.1",
    "radash": "^12.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/testing": "^11.0.8",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.14",
    "@swc/helpers": "^0.5.15",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.15",
    "@types/lodash-es": "^4.17.12",
    "@types/multer": "^1.4.12",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^22.13.1",
    "@types/node-schedule": "^2.1.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/webpack-env": "^1.18.8",
    "husky": "^9.1.7",
    "inline-source-map": "^0.6.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "run-script-webpack-plugin": "0.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["bcrypt"]
  }
}
