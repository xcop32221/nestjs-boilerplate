{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "@config": ["src/config/index"],
      "@config/*": ["src/config/*"],
      "@constants": ["src/constants/index"],
      "@constants/*": ["src/constants/*"],
      "@decorators": ["src/decorators/index"],
      "@decorators/*": ["src/decorators/*"],
      "@dtos": ["src/dtos/index"],
      "@dtos/*": ["src/dtos/*"],
      "@entities": ["src/entities/index"],
      "@entities/*": ["src/entities/*"],
      "@enums": ["src/enums/index"],
      "@enums/*": ["src/enums/*"],
      "@features": ["src/features"],
      "@filters": ["src/filters/index"],
      "@filters/*": ["src/filters/*"],
      "@guards": ["src/guards/index"],
      "@guards/*": ["src/guards/*"],
      "@interceptors": ["src/interceptors/index"],
      "@interceptors/*": ["src/interceptors/*"],
      "@modules": ["src/modules/index"],
      "@modules/*": ["src/modules/*"],
      "@pipes": ["src/pipes/index"],
      "@pipes/*": ["src/pipes/*"],
      "@utils": ["src/utils/index"],
      "@utils/*": ["src/utils/*"]
    },
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    "target": "ES2021"
  },
  "exclude": ["tasks"]
}
